<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/header.ejs') %>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('../../partials/sidebar.ejs') %>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%- include('../../partials/navbar.ejs') %>

          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item">
                  <a href="/admin/dashboard">Home</a>
                </li>
                <li class="breadcrumb-item"><a href="/admin/item">Item</a></li>
              </ol>
            </nav>
            <!-- End Heading-->
            <nav>
              <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a
                  class="nav-item nav-link active"
                  id="nav-show-tab"
                  data-toggle="tab"
                  href="#nav-show"
                  role="tab"
                  aria-controls="nav-show"
                  aria-selected="false"
                  >Show Item</a
                >
                <a
                  class="nav-item nav-link"
                  id="nav-add-tab"
                  data-toggle="tab"
                  href="#nav-add"
                  role="tab"
                  aria-controls="nav-add"
                  aria-selected="true"
                  >Add Item</a
                >
              </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
              <div
                class="tab-pane fade"
                id="nav-add"
                role="tabpanel"
                aria-labelledby="nav-add-tab"
              >
                <%- include('../../admin/item/add_item.ejs') %>
              </div>
              <div
                class="tab-pane fade show active"
                id="nav-show"
                role="tabpanel"
                aria-labelledby="nav-show-tab"
              >
                <%- include('../../admin/item/table_item.ejs') %>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../../partials/footer.ejs') %>
        <!-- End of Footer -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Bootstrap core JavaScript-->
    <%- include('../../partials/js.ejs') %>
    <script>
      CKEDITOR.replace("about");
    </script>
  </body>
</html>
